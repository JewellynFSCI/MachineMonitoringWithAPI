@model MachineMonitoring.Models.ViewModel.AdminVM

<!DOCTYPE html>
@{
	Layout = null;
}

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Prod Map | MDM</title>

	<link rel="icon" type="image/png" href="~/img/icon3.png" />

	<link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
	<link href="~/dist/css/adminlte.min.css" rel="stylesheet" />

	<link href="~/plugins/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
	<link href="~/plugins/openlayers/ol.css" rel="stylesheet" />
	
	<link href="~/css/prodmap.css" rel="stylesheet" />

</head>
<body class="hold-transition">

	@* @await Html.PartialAsync("_PartialNavBarLogout") *@

	<section class="content" style="background-color: #e9ecef;">
		<div class="container-fluid">
			<div class="row">
				<div class="col-12">
					<div class="card mt-2">
						<div class="card-body" style="margin-top:-1%">
							<div class="row ml-1">
								<div id="legend-container" class="d-flex align-items-center flex-nowrap" style="overflow-x:auto; gap:0.5rem; padding:0.5rem;">
									<span class="mr-2 font-weight-bold">Legends:</span>

									@foreach (var item in Model.mcStatusColor)
									{
										<div class="legend-item d-flex align-items-center px-2 py-1 text-nowrap" data-status="@item.status_details" style="border-radius:4px; cursor:pointer; background:#fff; box-shadow:0 0 2px rgba(0,0,0,0.15);">
											<span class="circle mr-1" style="background-color:@item.hex_value; width:10px; height:10px; border-radius:50%; display:inline-block;"></span>
											<span class="labelcolor">@item.status_details</span>
										</div>
									}

									<div class="legend-item d-flex align-items-center px-2 py-1 text-nowrap" id="clear-filter" style="border-radius:4px; cursor:pointer; background:#fff; box-shadow:0 0 2px rgba(0,0,0,0.15);">
										<span class="labelcolor">Show All</span>
									</div>

									<div class="input-group input-group-sm" style="min-width:400px; margin-left:auto;">
										<div class="input-group-prepend">
											<span class="input-group-text"><i class="fas fa-search-location"></i></span>
										</div>
										<select name="MCLocator" id="MCLocator" class="form-control form-control-sm select2" style="background: #fff">
										</select>
									</div>
								</div>
							</div>

							<div class="mt-2" id="machine-cards"></div>

							<div class="mt-2">
								<div id="map"></div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</section>


	<!-- jQuery -->
	<script src="~/plugins/jquery/jquery.min.js"></script>
	<script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
	<script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/dist/js/adminlte.js"></script>
	<script src="~/plugins/openlayers/ol.js"></script>	<!--OpenLayer JS-->
	<script src="~/plugins/sweetalert2/sweetalert2.min.js"></script>
	<script src="~/plugins/signalr/signalr.js"></script>
	<script src="~/js/productionmap.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>


</body>
</html>
