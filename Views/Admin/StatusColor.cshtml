@model MachineMonitoring.Models.ViewModel.AdminVM
@{
	ViewData["Title"] = "Machine Status Color";
}


<style>
	.color-box {
		display: flex;
		align-items: center; /* vertical alignment */
		gap: 8px; /* space between picker and text */
	}

	.colorPicker {
		appearance: none;
		-webkit-appearance: none;
		border: none;
		padding: 0;
		margin: 0;
		width: 40px;
		height: 40px;
		cursor: pointer;
		background: none;
	}

		.colorPicker::-webkit-color-swatch-wrapper {
			padding: 0;
		}

		.colorPicker::-webkit-color-swatch {
			border: none;
		}
</style>

<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<div class="card mt-3">
					<div class="card-header">
						<h3 class="card-title">
							<i class="fas fa-palette"></i>
							Machine Status Color Code
						</h3>
					</div>
					<div class="card-body">
						<div class="table-responsive" style="height:70vh">
							<table id="tblData" class="table table-bordered table-hover">
								<thead>
									<tr>
										<th style="width:10%;">ID</th>
										<th style ="width:30%;">Details</th>
										<th style="width:25%;">Color Name</th>
										<th style="width:20%;">Hex</th>
										<th style="width:15%;"></th>
									</tr>
								</thead>
								<tbody id="tblBody">
									@await Html.PartialAsync("_PartialStatusColorTable", Model)
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


@section Scripts {
	<script src="~/js/MachineStatusColor.js"></script>
}